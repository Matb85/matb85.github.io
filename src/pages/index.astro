---
import About from '@/index/About.astro';
import Footer from '@/footer/Footer.astro';
import Header from '@/index/Header.astro';
import Projects from '@/works/Projects.astro';
import Works from '@/works/Works.astro';
import Layout from "~/layout.astro";
import Photos from "../components/index/Photos.astro";

const title = "Mateusz Bis | Portfolio";
const desc = "Hi, my name is Mateusz Bis, I'm a web developer and a UI/UX designer. Welcome to my portfolio!";
---

<Layout title={title} description={desc}>
    <Header />
    <About />
    <Photos/>
    <Projects />
    <Works />
    <Footer />
</Layout>

<style lang="postcss">
    :global(#start .showcase-right), :global(#start .showcase-left) {
        filter: grayscale(1);
        transition: filter 0.2s;
    }

    :global(#start .showcase-right:hover), :global(#start .showcase-left:hover) {
        filter: grayscale(0);
    }

    :global(#start .showcase-left:hover h2), :global(#start .showcase-right:hover h2) {
        text-decoration: underline;
    }
</style>
