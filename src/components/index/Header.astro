---
import { Logo } from "@/icons/Logo";
import Photo from "@/utils/Photo.tsx";
---
<header id="start" class="cr_flex w-full gap-2 md:gap-12  md:pt-4 overflow-hidden relative">
  <img
    data-aos-delay="300"
    data-aos-offset="0"
    data-aos="fade"
    class="translate-x-[-20%] absolute top-48 md:top-20 -left-32"
    src="./arrows.svg"
    alt="arrow"
    loading="lazy"
  />
  <img
    data-aos-delay="300"
    data-aos-offset="0"
    data-aos="fade"
    class="translate-x-[20%] absolute bottom-0 md:bottom-20 -right-32"
    src="./arrows.svg"
    alt="arrow"
    loading="lazy"
  />
  <div class="showcase items-end">
    <Photo
      className="w-3/4 md:w-auto md:h-[calc(100vh-10rem)] min-h-[400px] relative z-10"
      src="poznajgory-mobile.webp"
      alt="Poznaj GÃ³ry"
      sizes={[480, 720]}
    />
    <h2 class="left mt-2" data-aos-offset="0" data-aos-delay="0" data-aos="fade-right">
      Full Stack developer
    </h2>
  </div>

  <div class="logo" data-aos="zoom-in-up">
    <Logo className="wh_full absolute top-0 scale-[1.7] opacity-10 " />
    <Logo className="wh_full absolute top-0" />
    <p class="absolute -top-[2rem] w-full text-center text-[3rem]">Mateusz</p>
  </div>

  <p class="md:hidden absolute top-8 w-full text-center text-5xl">Mateusz Bis</p>

  <div class="showcase items-start">
    <h2 data-aos="fade-left" class="right mb-2">
      UI/UX designer
    </h2>
    <Photo
      className="w-3/4 md:w-auto md:h-[calc(100vh-10rem)] min-h-[400px] relative z-10 object-contain"
      src="oceanpeace-mobile.webp"
      alt="Ocean Peace"
      sizes={[480, 720]}
    />
  </div>
</header>

<style lang="postcss">
    @import "~/global.css" reference;

    #start h2 {
        @apply text-2xl md:text-3xl xl:text-4xl 2xl:text-4xl;
    }
    #start h2.left {
        @apply text-right;
    }

    @media screen and (max-width: 767px) {
        #start {
            @apply pt-20;
        }
        #start h2 {
            @apply absolute top-32 w-full left-0 text-center!;
        }
        #start h2.right {
            @apply top-24;
        }

        #start .showcase {
            @apply mt-24;
        }
    }

    #start .showcase {
        @apply md:w-1/2 flex flex-col flex-none md:flex-auto;
    }

    #start .showcase :global(img) {
      @apply object-contain;
    }

    .logo {
        @apply md:relative w-64 h-64;
    }

    @media screen and (max-width: 767px) {
        .logo {
            @apply hidden;
        }
    }
</style>
