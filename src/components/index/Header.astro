<header id="start" class="w-full flex items-center justify-center px-4 pt-32 max-w-6xl mx-auto">
  <!-- Main Hero Section -->
  <div class="flex flex-col items-center text-center space-y-12">
    <!-- Logo and Name -->
    <div class="space-y-4" data-aos="fade-up">
      <h1 class="font-primary text-3xl md:text-5xl lg:text-6xl mb-2">Mateusz Bis</h1>
      <p class="text-base md:text-xl text-primary-600 font-medium mb-2">Work portfolio</p>
