          <a
            href={sideInterest.link}
            class="inline-flex items-center gap-1 text-primary-600 hover:text-primary-700 transition-colors duration-200 font-medium underline decoration-primary-300 hover:decoration-primary-500"
          >
            {sideInterest.icon}
            {sideInterest.title}
