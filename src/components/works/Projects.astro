---
import H from "@/utils/H";
import Photo from "@/utils/Photo";

const projects = [
  { img: "esteticoptima.webp", href: "https://estetic.optimamedical.pl" },
  { img: "optimamedical.webp", href: "https://optimamedical.pl" },
  { img: "sklepoptima.webp", href: "https://sklep.optimamedical.pl" },
  { img: "akademiawisly.webp", href: "https://akademiawislycanpack.pl" },
  { img: "poznajgory.webp", href: "https://poznajgory.pl" },
  { img: "redinn.webp", href: "https://redinnlabs.com" },
  { img: "pieninski-potok.webp", href: "https://pieninskipotok.pl" },
  { img: "u-wiktorka.webp", href: "https://domekuwiktorka.pl" },
  { img: "zygmuntowka.webp", href: "https://zygmuntowkaknd.pl" },
  { img: "echopienin.webp", href: "https://echopienin.pl" },
  { img: "fizjopieniny.webp", href: "https://fizjopieniny.pl" },
  { img: "amforest.webp", href: "https://amforest.pl" },
];
---

<H text="Development" />
<div
  data-aos="fade-right"
  class="text_border relative mx-auto text-center w-11/12 max-w-5xl leading-[1.8]! flex flex-col gap-4"
>
  <p>
    Below are my <b>favourite projects</b> I have worked on so far, click on the images to see the end result. Most of them
    are also displayed on{" "}
    <a href="https://redinnlabs.com" target="_blank" class="gradient-text">Redinn's website</a>.
  </p>
</div>
<div class="flex justify-center gap-4 text-4xl">
  <button id="projects-back-1" class="btn pt-0 pb-1"> «« </button>
  <button id="projects-next-1" class="btn pt-0 pb-1"> »» </button>
</div>
<section id="projects-con" data-aos="fade-up" class="w-full overflow-auto mt-4">
  <div class="flex w-auto flex-nowrap gap-2 sm:gap-4 px-4">
    {
      projects.map((p, i) => (
        <a
          href={p.href}
          target="_blank"
          rel="nofollow noopener"
          class="project w-4/5 lg:w-1/3 max-w-[60vh] flex-none transition-all hover:brightness-75 "
        >
          <Photo className="w-full object-cover" src={p.img} alt="project" sizes={[480, 720]} />
        </a>
      ))
    }
  </div>
</section>

<script>
  const projectsCon = document.getElementById("projects-con")!;
  const projectsBack1 = document.getElementById("projects-back-1")!;
  const projectsNext1 = document.getElementById("projects-next-1")!;

  const projectWidth = projectsCon.querySelector(".project")!.clientWidth * 1.5;

  projectsBack1.addEventListener("click", () => {
    projectsCon.scrollTo({ left: projectsCon.scrollLeft - projectWidth, behavior: "smooth" });
  });

  projectsNext1.addEventListener("click", () => {
    projectsCon.scrollTo({ left: projectsCon.scrollLeft + projectWidth, behavior: "smooth" });
  });
</script>
