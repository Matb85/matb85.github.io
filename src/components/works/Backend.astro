<style>
  @import "~/global.css" reference;

  /* Achievement Cards with Enhanced Hover Transitions */
  .achievement-card {
    @apply relative overflow-hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .achievement-card::before {
    content: "";
    @apply absolute inset-0 opacity-0 rounded-xl;
    background: linear-gradient(135deg, rgba(192, 132, 252, 0.05) 0%, rgba(129, 140, 248, 0.05) 100%);
    transition: opacity 0.4s ease;
  }

  .achievement-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(192, 132, 252, 0.1);
  }

  .achievement-card:hover::before {
    @apply opacity-100;
  }

  /* Category Title Animation */
  .achievement-category {
    @apply transition-all duration-300 ease-in-out;
  }

  .achievement-card:hover .achievement-category {
    @apply text-indigo-500;
    transform: translateX(4px);
  }

  /* Title Animation */
  .achievement-title {
    @apply relative transition-all duration-300 ease-out;
  }

  .achievement-card:hover .achievement-title {
    @apply text-indigo-700;
    transform: translateY(-2px);
  }

  /* Description Animation */
  .achievement-description {
    @apply transition-all duration-300 ease-in-out;
  }

  .achievement-card:hover .achievement-description {
    @apply text-gray-700;
  }

  /* Tag Container Animation */
  .achievement-card:hover .tag-container {
    transform: translateY(-2px);
  }

  .achievement-card:hover .tag {
    @apply text-indigo-500;
    background-color: rgba(192, 132, 252, 0.15);
    border-color: rgba(192, 132, 252, 0.3);
  }

  /* Smooth border color transitions for different achievement types */
  .achievement-card:hover.hover\:border-green-400 {
    @apply border-green-400;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(74, 222, 128, 0.2);
  }

  .achievement-card:hover.hover\:border-orange-400 {
    @apply border-orange-400;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(251, 146, 60, 0.2);
  }

  .achievement-card:hover.hover\:border-red-400 {
    @apply border-red-400;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(248, 113, 113, 0.2);
  }

  .achievement-card:hover.hover\:border-primary-400 {
    @apply border-blue-400;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(59, 130, 246, 0.2);
  }
</style>
